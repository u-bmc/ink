{
  "name": "ink",
  "version": "0.0.1",
  "description": "u-bmc webui",
  "repository": "https://github.com/u-bmc/ink",
  "author": "Marvin Drees <marvin.drees@9elements.com>",
  "license": "MIT",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build:ci": "wireit",
    "preview": "wireit",
    "test": "wireit",
    "test:ci": "wireit",
    "check": "wireit",
    "lint": "wireit",
    "format": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "vite dev"
    },
    "build": {
      "command": "vite build"
    },
    "build:ci": {
      "command": "node --loader ts-node/esm ./ci/build.ts"
    },
    "preview": {
      "dependencies": [
        "build"
      ],
      "command": "vite preview"
    },
    "test": {
      "dependencies": [
        "build"
      ],
      "command": "vitest run --coverage"
    },
    "test:ci": {
      "command": "node --loader ts-node/esm ./ci/test.ts"
    },
    "check": {
      "command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
    },
    "lint": {
      "command": "prettier --check . && eslint ."
    },
    "format": {
      "command": "prettier --write ."
    }
  },
  "type": "module",
  "devDependencies": {
    "@carbon/charts-svelte": "1.6.3",
    "@dagger.io/dagger": "0.3.1",
    "@playwright/test": "1.29.2",
    "@sveltejs/adapter-static": "1.0.5",
    "@sveltejs/kit": "1.2.2",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "@vitest/coverage-c8": "0.27.3",
    "carbon-components-svelte": "0.71.0",
    "carbon-icons-svelte": "11.4.0",
    "carbon-pictograms-svelte": "12.2.0",
    "carbon-preprocess-svelte": "0.9.1",
    "d3": "7.8.1",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-svelte3": "4.0.0",
    "prettier": "2.8.3",
    "prettier-plugin-svelte": "2.9.0",
    "sass": "1.57.1",
    "svelte": "3.55.1",
    "svelte-check": "3.0.2",
    "svelte-preprocess": "5.0.0",
    "ts-node": "10.9.1",
    "tslib": "2.4.1",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.3",
    "wireit": "0.9.3"
  },
  "dependencies": {}
}
