{
  "name": "ink",
  "version": "0.0.1",
  "description": "u-bmc webui",
  "repository": "https://github.com/u-bmc/ink",
  "author": "Marvin Drees <marvin.drees@9elements.com>",
  "license": "MIT",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build:ci": "wireit",
    "preview": "wireit",
    "test": "wireit",
    "test:ci": "wireit",
    "check": "wireit",
    "lint": "wireit",
    "format": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "vite dev"
    },
    "build": {
      "command": "vite build"
    },
    "build:ci": {
      "command": "node ./ci/build.cjs"
    },
    "preview": {
      "dependencies": [
        "build"
      ],
      "command": "vite preview"
    },
    "test": {
      "dependencies": [
        "build"
      ],
      "command": "vitest run --coverage"
    },
    "test:ci": {
      "command": "node ./ci/test.cjs"
    },
    "check": {
      "command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
    },
    "lint": {
      "command": "prettier --ignore-unknown --check './**/*' && eslint"
    },
    "format": {
      "command": "prettier --ignore-unknown --write './**/*'"
    }
  },
  "type": "module",
  "devDependencies": {
    "@dagger.io/dagger": "0.6.1",
    "@floating-ui/dom": "1.2.9",
    "@playwright/test": "1.34.3",
    "@skeletonlabs/skeleton": "1.6.2",
    "@sveltejs/adapter-static": "2.0.2",
    "@sveltejs/kit": "1.20.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitest/coverage-c8": "0.31.4",
    "autoprefixer": "10.4.14",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-svelte": "2.30.0",
    "lucide-svelte": "^0.236.0",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "2.10.1",
    "svelte": "3.59.1",
    "svelte-check": "3.4.3",
    "svelte-eslint-parser": "0.30.0",
    "svelte-preprocess": "5.0.4",
    "tailwindcss": "3.3.2",
    "tslib": "2.5.3",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vitest": "0.31.4",
    "wireit": "0.9.5"
  },
  "packageManager": "yarn@3.6.0"
}
