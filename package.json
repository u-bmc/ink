{
  "name": "ink",
  "version": "0.0.1",
  "description": "u-bmc webui",
  "repository": "https://github.com/u-bmc/ink",
  "author": "Marvin Drees <marvin.drees@9elements.com>",
  "license": "MIT",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build:ci": "wireit",
    "preview": "wireit",
    "test": "wireit",
    "test:ci": "wireit",
    "check": "wireit",
    "lint": "wireit",
    "format": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "vite dev"
    },
    "build": {
      "command": "vite build"
    },
    "build:ci": {
      "command": "node ./ci/build.cjs"
    },
    "preview": {
      "dependencies": [
        "build"
      ],
      "command": "vite preview"
    },
    "test": {
      "dependencies": [
        "build"
      ],
      "command": "node ./ci/test.cjs"
    },
    "test:ci": {
      "command": "vitest"
    },
    "check": {
      "command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
    },
    "lint": {
      "command": "prettier --ignore-unknown --check './**/*' && eslint"
    },
    "format": {
      "command": "prettier --ignore-unknown --write './**/*'"
    }
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": false,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:svelte/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020,
      "extraFileExtensions": [
        ".svelte"
      ]
    },
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ]
  },
  "type": "module",
  "devDependencies": {
    "@dagger.io/dagger": "0.8.4",
    "@floating-ui/dom": "1.5.1",
    "@playwright/test": "1.37.1",
    "@skeletonlabs/skeleton": "1.12.0",
    "@sveltejs/adapter-static": "2.0.3",
    "@sveltejs/kit": "1.22.6",
    "@tailwindcss/forms": "0.5.4",
    "@tailwindcss/typography": "0.5.9",
    "@types/node": "20.5.2",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "@vitest/coverage-v8": "0.34.2",
    "autoprefixer": "10.4.15",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-svelte": "2.33.0",
    "lucide-svelte": "0.268.0",
    "postcss": "8.4.28",
    "prettier": "3.0.2",
    "prettier-plugin-svelte": "3.0.3",
    "svelte": "4.2.0",
    "svelte-check": "3.5.0",
    "svelte-eslint-parser": "0.33.0",
    "svelte-preprocess": "5.0.4",
    "tailwindcss": "3.3.3",
    "tslib": "2.6.2",
    "typescript": "5.1.6",
    "vite": "4.4.9",
    "vitest": "0.34.2",
    "wireit": "0.10.0"
  },
  "packageManager": "yarn@3.6.2"
}
