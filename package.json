{
  "name": "ink",
  "version": "0.0.1",
  "description": "u-bmc webui",
  "repository": "https://github.com/u-bmc/ink",
  "author": "Marvin Drees <marvin.drees@9elements.com>",
  "license": "MIT",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build:ci": "wireit",
    "preview": "wireit",
    "test": "wireit",
    "test:ci": "wireit",
    "check": "wireit",
    "lint": "wireit",
    "format": "wireit"
  },
  "wireit": {
    "dev": {
      "command": "vite dev"
    },
    "build": {
      "command": "vite build"
    },
    "build:ci": {
      "command": "yarn node --loader ts-node/esm ./ci/build.ts"
    },
    "preview": {
      "dependencies": [
        "build"
      ],
      "command": "vite preview"
    },
    "test": {
      "dependencies": [
        "build"
      ],
      "command": "vitest run --coverage"
    },
    "test:ci": {
      "command": "node --loader ts-node/esm ./ci/test.ts"
    },
    "check": {
      "command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
    },
    "lint": {
      "command": "prettier --check . && eslint ."
    },
    "format": {
      "command": "prettier --write ."
    }
  },
  "type": "module",
  "devDependencies": {
    "@carbon/charts-svelte": "1.7.1",
    "@dagger.io/dagger": "0.5.0",
    "@playwright/test": "1.32.3",
    "@sveltejs/adapter-static": "2.0.2",
    "@sveltejs/kit": "1.15.7",
    "@types/node": "18.16.16",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "@vitest/coverage-c8": "0.30.1",
    "carbon-components-svelte": "0.73.5",
    "carbon-icons-svelte": "11.4.0",
    "carbon-pictograms-svelte": "12.4.0",
    "carbon-preprocess-svelte": "0.9.1",
    "d3": "7.8.4",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-svelte3": "4.0.0",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "2.10.0",
    "sass": "1.62.0",
    "svelte": "3.58.0",
    "svelte-check": "3.2.0",
    "svelte-preprocess": "5.0.3",
    "ts-node": "10.9.1",
    "tslib": "2.5.0",
    "typescript": "5.0.4",
    "vite": "4.3.1",
    "vitest": "0.30.1",
    "wireit": "0.9.5"
  },
  "packageManager": "yarn@3.5.0"
}
